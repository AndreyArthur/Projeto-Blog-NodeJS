<h1>{{categoria.nome}}</h1>

{{#each postagem}}
<div class="card mt-3">
  <div class="card-body">
    <h3>{{titulo}}</h3>
    <p>{{descricao}}</p>
    <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
    <hr>
    <small>Data: {{data}}</small>
  </div>
</div>
{{else}}
  <h4 class="text-black-50 mt-4">Nenhuma postagem aqui por enquanto :(</h4>
{{/each}}