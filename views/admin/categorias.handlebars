<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
  <div class="card mt-3">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small><strong>Slug:</strong> {{slug}}</small>
      <a style="display: block; margin-top: 8px;" href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar Categoria</button></a>
      <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}"/>
        <button type="submit" class="btn btn-danger mt-3">Deletar Categoria</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="text-black-50 mt-4">Nenhuma categoria aqui por enquanto :(</h4>
{{/each}}