{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Criar Postagem:</h2><br>

<div class="card mb-4">
  <div class="card-body">
    <form action="/admin/postagens/nova" method="POST">
      <label class="mt-2" for="titulo">Título:</label>
      <input type="text" name="titulo" class="form-control" required>
      <label class="mt-2" for="conteudo">Conteúdo:</label>
      <textarea style="height: 250px; resize: none;" name="conteudo" class="form-control" required></textarea>
      <label class="mt-2" for="descricao">Descrição:</label>
      <input type="text" name="descricao" class="form-control" required>
      <label class="mt-2" for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control" required>
      <label class="mt-2" for="categoria">Categoria:</label>
      <select class="form-control" name="categoria">
        {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria registrada</option>
        {{/each}}
      </select>
      <button type="submit" class="btn btn-success mt-3">Criar Postagem</button>
    </form>
  </div>
</div>